<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="jumboMaps1._0.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:jumboMaps1._0"
    Shell.FlyoutBehavior="Disabled">

    <ShellContent
        Title="Jumbo maps"
        
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />

    <Shell.ToolbarItems >
        <ToolbarItem Text="Maps" IconImageSource="map.png"></ToolbarItem>
        <ToolbarItem Text="Producten" IconImageSource="box.png"></ToolbarItem>
        <ToolbarItem Text="Paden" IconImageSource="path.png"></ToolbarItem>
        <ToolbarItem Text="Instellingen" IconImageSource="settings.png"></ToolbarItem>
        <ToolbarItem Text="Info"></ToolbarItem>
    </Shell.ToolbarItems>

</Shell>
